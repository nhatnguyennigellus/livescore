<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dfb"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.livescore.activities.DFBPokalActivity" >

    <TextView
        android:id="@+id/tvWC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DFB POKAL 2016/17"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDFBRunde"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="Runde"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/llScoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/txtDFBTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnDFBGoal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0B610B"
            android:enabled="true"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0B610B"
            android:gravity="center"
            android:text=":"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnDFBGoal2"
