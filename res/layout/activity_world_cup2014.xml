        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FIFA WORLD CUPâ„¢ - RUSSIA 2018"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnWCRound"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#D50000"
        android:textColor="#ffffff"
        android:text="Round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scoreboard2"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/txtWCTeamA"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="right"
            android:paddingRight="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imgWCFlagA"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:src="@drawable/trophywc" />

        <Button
            android:id="@+id/btnKitColorA"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/btnWCGoalA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
