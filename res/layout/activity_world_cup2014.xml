<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wc"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.livescore.activities.WorldCup2014Activity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/txtWC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FIFA WORLD CUP - BRAZIL 2014"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F7FE2E" />

    <Button
        android:id="@+id/btnWCRound"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_light"
        android:text="Round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CEF6CE"
        android:gravity="center" >

        <TextView
            android:id="@+id/txtWCTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imgWCFlagA"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:src="@drawable/trophywc" />
        <Button
                android:id="@+id/btnWCGoalA"
                android:layout_height="wrap_content"
                android:background="#0B610B"
                android:text="0"
                android:textColor="#F4FA58"
                android:textColorLink="#F4FA58"
                android:textSize="30sp"
                android:layout_width="wrap_content"
            	android:gravity="center"/>

            <TextView
                android:id="@+id/tvMinute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0B610B"
                android:gravity="center"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F4FA58"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnWCGoalB"
                android:layout_height="wrap_content"
                android:background="#0B610B"
                android:text="0"
                android:textColor="#F4FA58"
                android:textSize="30sp"
                android:layout_width="wrap_content" />
        <ImageView
            android:id="@+id/imgWCFlagB"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:src="@drawable/trophywc" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtWCTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#088A08" >

        <TextView
            android:id="@+id/txtWCScorerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtWCScorerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.50"
            android:gravity="right"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
